
@model IEnumerable<QuanLyCH.Models.Giay>
@{
    ViewBag.Title = "SPTheoLoai";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
   
<h2 style="text-align:center;color:#000000; font-weight:bold">Shop Giay</h2>
<hr />
<div class="">
    @Html.Action("LoaiSanPham", "Giay")
</div>
<div class="row">
    @foreach (var item in Model)
    {
        
        <div class="show-on-scroll right-to-left"style="display:contents">

            <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12 ">
                
                   
                    <div class="card">
                        <div class="card__img">
                            <img src="@item.hinh" alt="">
                        </div>
                        <h2>@item.tengiay</h2>
                        <div class="card__social">
                            <p><strong>Giá: </strong>@item.giaban</p>
                            <p><strong>Ngày cập nhật: </strong>@item.ngaycapnhat</p>
                            <p><strong>Số lượng tồn: </strong>@item.soluongton</p>
                        </div>
                        <div class="DatMua">
                            <a class="btn btn-default" href="@Url.Action("Detail", "Giay",new { @id = item.magiay})">Thong Tin</a>
                            <a class="btn btn-success" href="@Url.Action("ThemGioHang", "GioHang",new { @id = item.magiay, @strURL = Request.Url.ToString() })">Đặt mua</a>
                        </div>

                    </div>
                
            </div>
        </div>

    }
</div>
<style>
    .card {
        background: #242628;
        height: 400px;
        border-radius: 10px;
        text-align: center;
        overflow: hidden;
    }

    img {
        object-fit: cover;
        width: 100%;
        height: 100%;
        object-position: center;
    }

    .card__img {
        width: 120px;
        height: 120px;
        border: 2px solid var(--primary-color);
        border-radius: 50%;
        overflow: hidden;
        margin: 0 auto;
        transform: translateY(25px);
        transition: 0.5s;
    }

    .card h2 {
        color: white;
        margin-top: 35px;
    }

    .card__social {
        margin: 20px 0;
    }

    .card p {
        color: white;
    }

    .card__social a {
        color: white;
        margin: 25px 20px;
        font-size: 20px;
        text-decoration: none;
    }

        .card__social a:hover {
            color: #f2726a;
        }

    .card button {
        width: 150px;
        height: 40px;
        border: 1px solid var(--primary-color);
        background: transparent;
        color: white;
        border-radius: 10px;
        transition: 0,5s;
    }

        .card button:hover {
            background-color: #f2726a;
        }

    .card__img:hover {
        width: 100%;
        height: 100%;
        border-radius: unset;
        transform: unset;
        border: unset;
    }
</style>