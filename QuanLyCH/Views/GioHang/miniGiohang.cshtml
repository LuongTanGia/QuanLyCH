<div class="aa">
    <a href="@Url.Action("Giohang", "GioHang")"><i class="fa-solid fa-cart-shopping" style="color:#ffffff;"></i><sup style="color: #ff0000; font-size: 15px; top: -13px; background: #222222; border-radius: 50%">
    @if (Session["GioHang"] != null)
    {
        @lstGiohang.Count()}
</sup> </a>
    <div style="width: 550px; z-index: 100; background:white; position: absolute;" class="bb">
        <p style="text-align:center;">GioHangMiNi</p>
        <table class="table">

            @foreach (var item in Model)
            {

                <tr>
                    <td>@Html.DisplayFor(modelItem => item.tengiay)</td>
                    <td width="100px"> <img src="@item.hinh" style="width:30%" /></td>
                    @using (Html.BeginForm("CapnhatGiohang", "GioHang", new { @id = item.magiay }))
                    {
                        <td>@String.Format("{0:0,0}", item.giagiam) VNĐ </td>
                        <td> <input type="number" min=" 1" name="txtSolg" value="@item.iSoluong" style="width:40px; border:none" /></td>
                        <td style="display:flex">
                            @Html.ActionLink("Xóa", "XoaGiohang", new { @id = item.magiay })
                        </td>


                    }
                </tr>
            }



        </table>
        <div style="text-align:center; margin-bottom:5px;">

            <a value="Xác nhận" class="btn btn-success" href="@Url.Action("Giohang", "GioHang")" style="align-items:center">Xem Gio Hang </a>
        </div>

    </div>


</div>

